#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/stylelint@15.6.1/node_modules/stylelint/bin/node_modules:/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/stylelint@15.6.1/node_modules/stylelint/node_modules:/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/stylelint@15.6.1/node_modules:/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/stylelint@15.6.1/node_modules/stylelint/bin/node_modules:/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/stylelint@15.6.1/node_modules/stylelint/node_modules:/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/stylelint@15.6.1/node_modules:/Users/huluo/github/FastAPI_Vue_Admin/frontend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../stylelint/bin/stylelint.js" "$@"
else
  exec node  "$basedir/../stylelint/bin/stylelint.js" "$@"
fi
